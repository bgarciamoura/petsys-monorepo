generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-musl", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Address   Address[]
}

model Tutor {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  Pet       Pet[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Address   Address[]
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  age       Int
  tutor_id  String
  tutor     Tutor    @relation(fields: [tutor_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id        String   @id @default(uuid())
  street    String
  city      String
  country   String
  userId    String
  user_id   String
  user      User?    @relation(fields: [user_id], references: [id])
  tutor_id  String
  tutor     Tutor?   @relation(fields: [tutor_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
